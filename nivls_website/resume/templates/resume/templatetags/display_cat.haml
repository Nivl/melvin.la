- load resume_tags markup

- for cat in cats

    .row-fluid

        .span3
            %h3{'id'      : 'resume-category-name-{{ cat.pk }}',
                'class'   : '{% if perms.resume.change_category %}resume-category-name-live-edit{% endif %}'}<
                - include 'ajax/single_field_value.haml' with value=cat.name

        .span9
            - if cat.image
                %img.pull-right.img-rounded{'src': '{{ cat.image.url }}'}

            - if cat.display_type == "L"
              - cat_as_list cat is_downloadable
            - elif cat.display_type == "D"
              - cat_as_description_list cat is_downloadable
            - else
              - cat_as_block cat is_downloadable

        - if not forloop.last
            %hr