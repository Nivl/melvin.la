- load humanize common_tags i18n

%h2<
    - trans "Videos"

- for video in videos
    .video{'itemprop' : 'screenshot',
           'itemscope': None,
           'itemtype' : 'http://schema.org/ImageObject'}

        %h3{'id'       : 'lab-video-name-{{ video.pk }}',
            'class'    : '{% if perms.lab.change_video %}lab-video-name-live-edit{% endif %}',
            'itemprop' : 'name'}
            - include 'ajax/single_field_value.haml' with value=video.name

        %div{'id'       : 'lab-video-description-{{ video.pk }}',
           'class'    : '{% if perms.lab.change_video %}lab-video-description-live-edit{% endif %}',
           'itemprop' : 'description'}
            - include 'ajax/single_field_value_md.haml' with value=video.description

        %iframe{'src'           : '{{ video.url }}',
                'frameborder'   : '0',
                'width'         : '480',
                'height'        : '270'}
