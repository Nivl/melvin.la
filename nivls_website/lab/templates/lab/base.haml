- extends "base_common.haml"
- load url from future
- load tag_lab i18n

- block "menu-lab"
    active
- block "title"
    - trans "Lab"
- block "page-title"
    - trans "Lab"
- block "page-subtitle"
    - trans "Where I present my projects"

- block "breadcrumb-content"
    %li<
        %span.divider<
            \/

    %li{'itemscope': None, 'itemtype': 'http://data-vocabulary.org/Breadcrumb'}
        %a{'itemprop'   : 'url',
           'data-depth' : '1',
           'data-ajax'  : 'body-content-only',
           'title'      : '{% trans "Lab" %}',
           'href'       : '{% url "lab" %}'}
            %span{'itemprop': 'title'}<
                - trans "Lab"

    - block "breadcrumb-subcontent"

- block "app_js"
    :javascript
        liveEdit('lab-project-description');
        liveEdit('lab-project-name');
        liveEdit('lab-project-catchphrase');
        liveEdit('lab-project-license');
        liveEdit('lab-project-realclients');
        liveEdit('lab-project-clients');
        liveEdit('lab-project-realcoworkers');
        liveEdit('lab-project-coworkers');
        liveEdit('lab-project-progress');
        liveEdit('lab-progress-date');
        liveEdit('lab-progress-description');
        liveEdit('lab-video-name');
        liveEdit('lab-video-description');

- block "body-content"
    .container
        .row
            #body-content-only.span9{'role': 'main'}
                - block "content"

            - with act_menu="home"
                - block "menu"
                    - include "lab/inc/menu.haml"
