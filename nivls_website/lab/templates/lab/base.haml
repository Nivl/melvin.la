- extends "base_common.haml"
- load url from future
- load tag_lab i18n

- block "menu-lab"
    active
- block "title"
    - trans "Lab"
- block "page-title"
    - trans "Lab"
- block "page-subtitle"
    - trans "Where I present my projects"

- block "breadcrumb-content"
    %li<
        %span.divider<
            \/

    %li{'itemscope': None, 'itemtype': 'http://data-vocabulary.org/Breadcrumb'}
        %a{'itemprop'   : 'url',
           'data-depth' : '1',
           'data-ajax'  : 'body-content-only',
           'title'      : '{% trans "Lab" %}',
           'href'       : '{% url "lab" %}'}
            %span{'itemprop': 'title'}<
                - trans "Lab"

    - block "breadcrumb-subcontent"

- block "app_js"
    :javascript
        liveEdit('lab-project-description-', {}, 'lab-get-project-description', lab-project-description-live-edit');
        liveEdit('lab-project-name-', {}, 'lab-get-project-name', 'lab-project-name-live-edit');
        liveEdit('lab-project-catchphrase-', {}, 'lab-get-project-catchphrase', 'lab-project-catchphrase-live-edit');
        liveEdit('lab-project-license-', {}, 'lab-get-project-license', 'lab-project-license-live-edit', [null, 'A']);
        liveEdit('lab-project-realclients-', {}, 'lab-get-project-realclients', 'lab-project-realclients-live-edit');
        liveEdit('lab-project-clients-', {}, 'lab-get-project-clients', 'lab-project-clients-live-edit');
        liveEdit('lab-project-realcoworkers-', {}, 'lab-get-project-realcoworkers', 'lab-project-realcoworkers-live-edit');
        liveEdit('lab-project-coworkers-', {}, 'lab-get-project-coworkers', 'lab-project-coworkers-live-edit');
        liveEdit('lab-project-progress-rate-', {}, 'lab-get-project-progress-rate', 'lab-project-progress-rate-live-edit');
        liveEdit('lab-project-progress-date-', {}, 'lab-get-project-progress-date', 'lab-project-progress-date-live-edit', 'pk');
        liveEdit('lab-project-progress-description-', {}, 'lab-get-project-progress-description', 'lab-project-progress-description-live-edit', 'pk');
        liveEdit('lab-project-video-name-', {}, 'lab-get-project-video-name', 'lab-project-video-name-live-edit', 'pk');
        liveEdit('lab-project-video-description-', {}, 'lab-get-project-video-description', 'lab-project-video-description-live-edit', 'pk');

- block "body-content"
    .container
        .row
            #body-content-only.span9{'role': 'main'}
                - block "content"

            - with act_menu="home"
                - block "menu"
                    - include "lab/inc/menu.haml"
