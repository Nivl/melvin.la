- extends "base_common.haml"
- load url from future
- load tag_lab i18n

- block "menu-lab"
    active
- block "page-title"
    - trans "Lab"
- block "page-subtitle"
    - trans "Where I present my projects"

- block "breadcrumb-content"
    %li<
        %span.divider<
            \/
    %li<
        %a{'data-depth' : '1',
           'data-ajax'  : 'body-content-only',
           'title'      : '{% trans "Lab" %}',
           'href'       : '{% url "lab" %}'}
           - trans "Lab"

    - block "breadcrumb-subcontent"


- block "body-content"
    .container
        .row
            #body-content-only.span9
                - block "content"

            - with act_menu="home"
                - block "menu"
                    - include "lab/inc/menu.haml"
