- load i18n

- if categories
    %li.dropdown
        %a.dropdown-toggle{'data-toggle' : 'dropdown',
                           'href'        :  '#'}
            - trans "Categories"
            %b.caret
        %ul.dropdown-menu
            - for cat in categories
                %li
                    %a{'data-depth' : '10',
                       'data-ajax'  : 'body-content-only',
                       'href'       : '{{ cat.get_absolute_url }}'}
                        {{ cat.name }}