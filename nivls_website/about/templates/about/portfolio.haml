- extends "about/base.html"

- load markup i18n staticfiles %}
- load url from future %}

- block "menu-portfolio"
    active

- block "title"
    - trans "Portfolio"

- block "page-title"
    - trans "Portfolio"

- block "page-subtitle"
    - trans "Where my professional projects are"

- block "breadcrumb-content"
    %li
        %span.divider<
            /

    %li
        %a{'data-depth' : '1',
           'data-ajax'  : 'body-content',
           'title'      : '{% trans "Portfolio" %}',
           'href'       : '{% url "portfolio" %}'}<
            - trans "Portfolio"

- block "content"

    - for project in projects
        %section.clean-section
            %h2.section-content{'class'   : '{% if perms.lab.change_project %}lab-project-name-live-edit{% endif %}',
                                'id'      : 'lab-project-name-{{ project.lab.slug }}'}<
                - include 'ajax/single_field_value.haml' with value=project.lab.name

            .section-content
                .section-image-left

                    %img{'src'      :   '{{ project.screenshot.url }}',
                         'alt'      :   '{{ project.lab.name }}',
                         'class'    :   'img-polaroid img-rounded'}

                .info.margin-bottom-3
                    %strong<
                        - trans "Job(s):"

                    - for label in project.works.all
                        - if forloop.counter0 > 0
                          \-
                        ={ label }

                %div{'class'   : '{% if perms.about.change_project %}about-project-description-live-edit{% endif %}',
                     'id'      : 'about-project-description-{{ project.pk }}'}
                    - include 'ajax/single_field_value_md.haml' with value=project.description


                  %a.btn{'data-depth'   :   '1',
                         'data-ajax'    :   'body-content',
                         'data-navbar'  :   '#navbar-lab',
                         'title'        :   '{% trans "Lab" %}',
                         'href'         :   '{{ project.lab.get_absolute_url }}'}
                    - trans "Know more"

        %hr

    %section.clean-section
        %h2
            - trans "See more projects"

        .section-content
            .section-image-left

                %img.img-polaroid.img-rounded{'src': '{% static "commons/img/portfolio_+.png" %}',
                                              'alt' : '{{ project.lab.name }}'}

            %div
              {{ project.lab.description|markdown }}

              %a.btn{'data-depth'   :   '1',
                     'data-ajax'    :   'body-content',
                     'data-navbar'  :   '#navbar-lab',
                     'title'        :   '{% trans "Lab" %}',
                     'href'         :   '{% url "lab" %}'}
                    {% trans "See more projects" %}
