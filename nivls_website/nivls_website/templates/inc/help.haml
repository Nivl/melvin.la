- load i18n

#help.modal.hide.fade
    .modal-header
        %h3<
            - trans "Help"
    .modal-body
        %h4<
            - trans "Keyboard shortcuts"

        .row-fluid
            .span6
                %h5.center-text<
                    - trans "Live Editing"
                %dl.dl-horizontal
                    %dt<
                        e
                    %dd<
                        - trans "Enable live editing"

            .span6
                %h5.center-text<
                    - trans "Formatting"

                %dl.dl-horizontal
                    %dt<
                        &lt;Ctrl&gt; + b
                    %dd<
                        - trans "Bold"

                    %dt<
                        &lt;Ctrl&gt; + i
                    %dd<
                        - trans "Italic"
                %dl.dl-horizontal
                    %dt<
                        &lt;Ctrl&gt; + l
                    %dd<
                        - trans "Link"

                    %dt<
                        &lt;Ctrl&gt; + q
                    %dd<
                        - trans "Blockquote"

                    %dt<
                        &lt;Ctrl&gt; + k
                    %dd<
                        - trans "Code"

                    %dt<
                        &lt;Ctrl&gt; + G
                    %dd<
                        - trans "Image"
                %dl.dl-horizontal
                    %dt<
                        &lt;Ctrl&gt; + o
                    %dd<
                        - trans "Numbered list"

                    %dt<
                        &lt;Ctrl&gt; + u
                    %dd<
                        - trans "Bulleted list"

                    %dt<
                        &lt;Ctrl&gt; + h
                    %dd<
                        - trans "Heading"

                    %dt<
                        &lt;Ctrl&gt; + r
                    %dd<
                        - trans "Horizontal rule"
