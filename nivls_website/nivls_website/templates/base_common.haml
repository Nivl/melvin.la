    #middle-header
        .container
            .row
                .wrapper
                    .col-lg-9
                        %h1#page-title<
                            - block "page-title"
                                - trans "Welcome"

                    .col-lg-3
                        %form.search-form{'method'     : 'get',
                                          'action'     : '{% url "haystack_search" %}',
                                          'data-ajax'  : 'body-content',
                                          'data-depth' : '1',
                                          'title'      : '{% trans "Search" %}'}

                            .input-group
                                %input.form-control{'type'          : 'text',
                                                    'placeholder'   : 'Search',
                                                    'name'          : 'q',
                                                    'data-provide'  : 'typeahead',
                                                    'data-items'    : '6'}

                                %span.input-group-btn
                                    %button.btn.btn-default{'type': 'submit'}
                                        %i.icon-search

            .row.margin-top-10
                .col-lg-12.clearfix
                    - block "breadcrumb"
                        %ul#breadcrumb.breadcrumb{'itemscope': None, 'itemtype': 'http://data-vocabulary.org/Breadcrumb'}
                            %li<
                                - trans "You are here"
                                →
                                %a{'href': '{% url "home" %}', 'itemprop': 'url'}
                                    %span{'itemprop': 'title'}
                                    - trans "Home"

    #bottom-header
        - block "page-menu"

        #subtitle-wrapper
            .element
                .container
                    .row
                        .col-lg-12
                            %h2#page-subtitle<
                                - block "page-subtitle"
                                    - trans "Where you have access to your data"

  .container
    .row
      .col-lg-12

        #loading-msg
          %img{'alt'  : 'loading',
               'src'  : '{% static "commons/img/loading-small.gif" %}'}
          &nbsp;loading...

        #body-content
          - block "body-content"

  - block "footer"
    - include "inc/footer.haml"
