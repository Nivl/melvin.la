                    %span.icon-bar
                    %span.icon-bar

                %a.navbar-brand{'href': '{% url "home" %}'}<
                    {{ ADMIN.get_full_name }}

                #main-menu-collapse.nav-collapse.collapse{'role': 'navigation'}
                    %ul#navbar-main-list.nav.navbar-nav.pull-right
                        %li#navbar-blog.blog{'class': '{% block "menu-blog" %}{% endblock %}'}
                            %a{'data-depth' : '1',
                               'title'      : '{% trans "Blog" %}',
                               'data-ajax'  : 'body-content',
                               'href'       : '{% url "blog" %}'}<
                                - trans "Blog"

                        %li#navbar-lab.lab{'class': '{% block "menu-lab" %}{% endblock %}'}
                            %a{'data-depth' : '1',
                               'data-ajax'  : 'body-content',
                               'href'       : '{% url "lab" %}',
                               'title'      : '{% trans "Lab" %}'}<
                                - trans "Lab"

                        %li#navbar-about.about{'class': '{% block "menu-about" %}{% endblock %}'}
                            %a{'data-depth' : '1',
                               'rel'        : 'author',
                               'data-ajax'  : 'body-content',
                               'title'      : '{% trans "About" %}',
                               'href'       : '{% url "about" %}'}<
                                - trans "About"

                        %li#navbar-portfolio.portfolio{'class': '{% block "menu-portfolio" %}{% endblock %}'}
