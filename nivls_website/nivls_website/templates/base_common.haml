                                            - trans "Edit my profile picture"

                                    %li
                                        %a{'data-ajax'  : 'body-content',
                                           'data-depth' : '1',
                                           'title'      : '{% trans "Social media accounts" %}',
                                           'href'       : '{% url "manage-social-account" %}'}
                                            %i.icon-tasks
                                            - trans "Social media accounts"

                                    %li.divider

