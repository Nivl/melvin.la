.thumbnail{'style': 'width: {{ needed_size }}px;
                     height: {{ needed_size }}px;'}

    %div{'style': 'width: {{ needed_size }}px;
                   height: {{ needed_size }}px;
                   overflow: hidden;'}

        %img{'style': 'max-width: none;
                       position: relative;
                       left: {{ pos_x }}px;
                       top: {{ pos_y }}px;
                       width: {{ resize_w }}px;
                       height: {{ resize_h }}px;',
            'src': '{{ image_url }}',
            'itemprop': '{{ microdata }}'}
