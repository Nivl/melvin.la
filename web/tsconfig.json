{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "types": [
    "node"
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "messages/en.d.json.ts",
    // tests
    "vitest.config.ts",
    "vitest.setup.ts",
    // scripts
    "./scripts/**/*.ts",
    "./scripts/**/*.tsx",
    // storybook
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    ".storybook/**/*.json",
    // playwright
    "e2e/**/*.ts",
    "playwright.config.ts",
    // MSW
    "public/mockServiceWorker.js",
    // tools
    "postcss.config.cjs",
    "next.config.ts",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    ".next",
  ]
}
