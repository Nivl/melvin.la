{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "types": [
    "node"
  ],
  "files": [
    "tailwind.config.ts"
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next",
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
  ],
  "references": [
    {
      "path": "./tsconfig.configs.json"
    },
    {
      "path": "./tsconfig.storybook.json"
    },
  ]
}
