{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Used because:
    // Node subpath imports are:
    //    Not working in vscode as of 2024-06-25
    //    Not working in with next build as of 2024-06-25
    "paths": {
      "#*": [
        "./src/*"
      ]
    }
  },
  "types": [
    "node"
  ],
  "files": [
    "tailwind.config.ts"
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next",
    "src/**/*.stories.ts",
    "src/**/*.stories.js"
  ],
  "references": [
    {
      "path": "./tsconfig.configs.json"
    },
    {
      "path": "./tsconfig.storybook.json"
    }
  ]
}
