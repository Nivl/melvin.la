{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./scripts/**/*.ts",
    "./scripts/**/*.tsx",
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.stories.ts",
    "src/**/*.stories.js"
  ],
}
